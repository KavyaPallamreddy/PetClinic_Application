      stage('Build docker image') {
                   steps {
                      script { 
			          bat "docker build -t ${env.IMAGE_REPO_NAME}:${env.BUILD_NUMBER} ./docker"
			
			   }                     
                    }
              }
      // Uploading Docker images into AWS ECR
	  stage('Pushing to ECR') {
		   steps{
		       script {
