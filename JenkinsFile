pipeline {
  agent any
    tools {
      maven 'Maven'
      jdk 'JDK11'
    }
	stages {
              stage('Build maven ') {
                   steps {      
                     bat 'mvn  clean install package'
                    }
                 }
        
              stage('Copy Artifact') {
                   steps { 
                
		     bat 'copy C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\target\\*.jar C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\docker'
                    }
                 }
      stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "KavyaPallamreddy/PetClinic_Application:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            bat 'docker build -t ${DOCKER_IMAGE} ./docker'
            bat 'def dockerImage = docker.image("${DOCKER_IMAGE}")'
            bat 'docker.withRegistry('', "docker-cred")' {
            bat 'dockerImage.push()'
            }
        }
      }
    }
}
}
