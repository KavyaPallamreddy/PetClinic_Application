pipeline {
  agent any
    tools {
      maven 'Maven'
      jdk 'JDK11'
    }
	  stages {
              stage('Build maven ') {
                   steps {      
                     bat 'mvn  clean install package'
                    }
                 }
        
              stage('Copy Artifact') {
                   steps { 
                
		     bat 'copy C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\target\\*.jar C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\docker'
                    }
                 }
         
      stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "kavyapallamreddy/petclinic-CICD:${BUILD_NUMBER}"
       
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            bat 'docker build -t ${DOCKER_IMAGE} ./docker'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
            }
        }
      }
    }       
}
}
