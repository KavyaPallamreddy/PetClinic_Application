pipeline {
  agent any
    tools {
      maven 'Maven'
      jdk 'JDK11'
    }
	  stages {
              stage('Build maven ') {
                   steps {      
                     bat 'mvn  clean install package'
                    }
                 }
        
              stage('Copy Artifact') {
                   steps { 
                
		     bat 'copy C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\target\\*.jar C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\docker'
                    }
                 }
         
      stage('Build docker image') {
           steps {
               script {         
                 def customImage = docker.build('kavyapallamreddy/petclinic', "./docker")
                 docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                 customImage.push("${env.BUILD_NUMBER}")
                 }                     
           }
        }
	  }    
}
}
