pipeline {
  agent any
    tools {
      maven 'Maven'
      jdk 'JDK11'
    }
	stages {
              stage('Build maven ') {
                   steps {      
                     bat 'mvn  clean install package'
                    }
                 }
	  stage('Static code analysis'){
            
            steps{
                
                script{
                    
                    withSonarQubeEnv(credentialsId: 'sonarqube') {
                        
                        sh 'mvn clean package sonar:sonar'
                    }
                   }
                    
                }
            }
        
              stage('Copy Artifact') {
                   steps { 
                
		     bat 'copy C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\target\\*.jar C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\petcline-application\\docker'
                    }
                 }
      stage('Build and Push Docker Image') {
      
      steps {
        script {
            	 def customImage = docker.build('kavyapallamreddy/petclinic-application-cicd', "./docker")
                 docker.withRegistry('https://registry.hub.docker.com', 'docker-cred') {
                 customImage.push("${env.BUILD_NUMBER}")
            }
        }
      }
    }
}
}
